<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/andro"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="501dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="148dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nomen"
            android:ems="10"
            tools:layout_editor_absoluteY="100dp" tools:layout_editor_absoluteX="224dp" android:id="@+id/editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>